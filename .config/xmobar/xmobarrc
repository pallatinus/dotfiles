                    , Run Memory ["-t", " <fn=1>\xf538</fn> [<used>/<total>]"] 10
                    , Run DiskU [("/", "<fn=1>\xf0a0</fn> [<free>]"), ("sdb1", "[<free>]"), ("sdc1", "[<free>]")] [] 3600
                    , Run UnsafeStdinReader
--                  , Run Wireless "wlp3s0" ["-t", "<fn=2>\xf1eb</fn> [<quality>]"] 10
