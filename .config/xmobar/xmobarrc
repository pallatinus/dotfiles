-- http://projects.haskell.org/xmobar/
-- install xmobar with these flags: --flags="with_alsa" --flags="with_mpd" --flags="with_xft"  OR --flags="all_extensions"

Config { font    = "Noto Sans, Font Awesome 6 Free Solid, 12, Bold 12"
       , additionalFonts = [ "Font Awesome 6 Free Solid 12" ] --Required to use a font type/size different from StdinReader output
       , bgColor = "#242634"
       , fgColor = "#c6e2f4"
       , position = Top
       , lowerOnStart = True
       , hideOnStart = False
       , allDesktops = True
       , persistent = True
       , iconRoot = "/home/paulo/.config/xmobar/xpm" -- default: "."
       , commands = [ Run Date "%a, %b %d %Y, %H:%M" "date" 10
                    , Run Network "enp2s0" ["-t", "<fn=1>\xf796</fn> [ <rx>|<tx> ]"] 10
