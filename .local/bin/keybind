#!/bin/sh

# My change on the US-International keyboard Layout

# Maps the Menu key to Left Super
xmodmap -e 'keycode 135 = Super_L'

# Maps Escape to Caps_Lock and remove the lock modifier from Caps_Lock
xmodmap -e 'keycode 66 = Escape'
xmodmap -e 'clear Lock'

# Maps Caps Lock to Scroll Lock
xmodmap -e 'keycode 78 = Caps_Lock'

# Maps Pause to Space
xmodmap -e 'keycode 127 = space'
